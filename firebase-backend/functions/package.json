{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "npm run build && firebase emulators:start --inspect-functions --only functions,firestore",
    "serve": "npm run build && firebase emulators:start --export-on-exit=./init_db",
    "shell": "npm run build && firebase functions:shell",
    "start": "firebase emulators:start --import=init_db",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "firebase --version",
    "clean": "lsof -t -i:8080,9000,4000 | xargs kill -9"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.0",
    "short-uuid": "^5.2.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "firebase-tools": "^13.20.2",
    "typescript": "^4.9.0"
  },
  "private": true
}
